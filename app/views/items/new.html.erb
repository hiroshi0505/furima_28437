<div class="items-sell-contents">
  <header class="items-sell-header">
    <%= link_to image_tag('furima-logo-color.png' , size: '185x50'), "/" %>
  </header>

  <div class="items-sell-main">
    <h2 class="items-sell-title">商品の情報を入力</h2>

    <%# form_withを使用しますが、オプションにmodelを指定しています
        指定したのは、コントローラーで定義した@item = Item.newです
        モデルを指定すると、送信先であるURLなどを自動推測してくれます %>
    <%= form_with model: @item, local: true do |f| %>
    <%= render partial: "shared/form", locals: { f: f } %>

    <%# 下部ボタン %>
    <div class="sell-btn-contents">
      <%= f.submit "出品する" ,class:"sell-btn", data: {confirm: "この内容で出品しますか？"} %>
      <%=link_to 'もどる', root_path, class:"back-btn" %>
    </div>
    <%# /下部ボタン %>
  </div>
  <% end %>

  <footer class="items-sell-footer">
    <ul class="menu">
      <li><%= link_to 'プライバシーポリシー', '#' %></li>
      <li><%= link_to 'フリマ利用規約', '#' %></li>
      <li><%= link_to '特定商取引に関する表記', '#' %></li>
    </ul>
    <%= link_to image_tag('furima-logo-color.png' , size: '185x50'), "/" %>
    <p class="inc">
      ©︎Furima,Inc.
    </p>
  </footer>
</div>